<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>

		<!--This should be synced with the url page defined in MixMode.Server/Pages.fs-->
		<StaticWebAssetBasePath>wasm</StaticWebAssetBasePath>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="App.fs" />
		<Compile Include="Startup.fs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Fun.Blazor.Wasm" Version="2.1.*" />
		<PackageReference Include="Fun.Blazor.HotReload" Version="2.1.*" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.5" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.5" PrivateAssets="all" />
	</ItemGroup>

</Project>